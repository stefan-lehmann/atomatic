      .dsc-forms__body
        input(type="url", placeholder="https://congue.io")

      .dsc-forms__head Number
      .dsc-forms__body
        input(type="number", placeholder="0", step="10")

      .dsc-forms__head Date
      .dsc-forms__body
        input(type="date")

      .dsc-forms__head Month
      .dsc-forms__body
        input(type="month")

      .dsc-forms__head Week
      .dsc-forms__body
        input(type="week")

      .dsc-forms__head Time
      .dsc-forms__body
        input(type="time")

      .dsc-forms__head Datetime local
      .dsc-forms__body
        input(type="datetime-local")

      .dsc-forms__head Color
      .dsc-forms__body
        input(type="color", value="#ff0000")



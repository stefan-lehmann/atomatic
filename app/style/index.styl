[v-cloak]
  display none!important

.h1
.h2
.h3
.h4
  margin-bottom .5em
  width 100%
  &:last-child
    margin-bottom 0

.h1
  font-weight 300
  font-size 2rem

.h2
  padding $paddingXLarge 0 0
  font-size 1.175rem
  font-weight 400

  &:first-child
    padding-top 0
  &:after
    content ''
    display block
    height $paddingNormal
    border-top $borderDefault
    margin-top $paddingLarge


.h3
  font-weight 600
  font-size 1.1rem

.h4
  font-weight 600
  font-size 1rem

.h5
  font-size .75rem

.small
  font-size .8em

.center
  text-align center

.devider
  height 1px
  background $borderColorDefault

.bordered-area
  border $borderDefault
  padding $paddingNormal
  position relative
.icon-block
  padding-top 100%
  background $hexAlto
  height 0
  position relative
  svg
    absolute(50%, null, null, 50%)
    width 30%
    height @width
    display block
    transform translate(-50%, -50%)

.media-query-block
  padding $paddingNormal
  background #66BB6A
  opacity .15
  color $colorTextInvert
  min-width 240px

.color-block
  height 0
  margin ($paddingNormal * -1 - 1px)
  margin-bottom 0
  padding-top 60%
  position relative
  z-index 1
  border $borderDefault

  &:before
    absolute(0,0,0,0,'')
    background inherit

  &:after
    absolute(0,0,0,0,'')
    background-color $hexWhite
    background-image linear-gradient(45deg, $hexAlto 25%, transparent 25%, transparent 75%, $hexAlto 75%, $hexAlto),
    linear-gradient(45deg, $hexAlto 25%, transparent 25%, transparent 75%, $hexAlto 75%, $hexAlto);
    background-size 20px 20px
    background-position 0 0, 10px 10px
    z-index -5

  &__title
    absolute(50%,$paddingNormal, null, $paddingNormal)
    transform translateY(-50%)
    text-align center
    color $colorTextInvert
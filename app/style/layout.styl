.layout
  width 100%
  height 100%
  display flex
  align-items stretch
  font-family Roboto
  color $colorText
  background-color $colorBackgroundDefault

  &__off-canvas
    flex-grow 0
    flex-shrink 0
    flex-basis 220px
    display flex
    flex-direction column
    margin-left 0
    position relative
    box-shadow $shadowDropDefault
    z-index 2
    transition all $timingNormal ease-in-out

    &&--hidden
      margin-left (@flex-basis*-1)
      box-shadow 0 0 0 0 transparent
      z-index 0

  &__canvas
    flex-grow 0
    flex-shrink 0
    flex-basis 100%
    @media $mediaMinTabletMid
      flex-grow 2
      flex-shrink 2


  &__iframe
    width 100%
    height 100%
    border none

    &
    &&--style
    &&--icons
    &&--patterns
      background-color $hexPorcelain

    &&--components
      background url($transparentBackground)
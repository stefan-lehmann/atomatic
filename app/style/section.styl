.section
  & + &
    margin-top $paddingXLarge

  &__body
    &&--cards
      margin 0 ($paddingNormal * -1)

    &&--iframe
      padding 0
      overflow hidden
      width 100%
      height 300px

.text-block
  padding $paddingXLarge 0
  &:first-child
    padding-top 0

  &:last-child
    padding-bottom 0
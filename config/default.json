{
  "baseDir": "source/styleguide",
  "dest": "public",
  "templateExt": "pug",
  "htmlExt": "html",
  "dataExt": "json5",
  "markdownExt": "md",
  "defaultDataFileName": "data",
  "sections": [
    {
      "title": "Style",
      "source": "style",
      "collector": "style",
      "generatedViewerCssFile": "generated.css",
      "cssPreprocessorVars": {
        "filename": "source/css/variables.json",
        "delimiter": "-"
      },
      "cssSource": "public/css/*.css"
    },
    {
      "title": "Icons",
      "source": "icons",
      "collector": "icons"
    },
    {
      "title": "Patterns",
      "source": "patterns",
      "collector": "patterns",
      "cssSource": "public/css/*.css",
      "bemPattern": "[block]__[element]--[modifier]",
      "modifierDelimiter": ["{{", "}}"],
      "warnOnMissingDataFile": false
    },
    {
      "title": "Atoms",
      "source": "components/atoms",
      "collector": "components"
    },
    {
      "title": "Molecules",
      "source": "components/molecules",
      "collector": "components"
    },
    {
      "title": "Organisms",
      "source": "components/organisms",
      "collector": "components"
    },
    {
      "title": "Templates",
      "source": "templates",
      "collector": "templates"
    }
  ],
  "app": {
    "viewerRootPath": "styleguide",
    "globals": {
      "jsFiles": ["/js/main.bundle.js"],
      "cssFiles": [ "/css/fonts.css", "/css/master.css" ]
    }
  },
  "server": {
    "name": "Atomatic",
    "port": 9000,
    "server": {
    },
    "https": true
  },
  "dumpData": false,
  "logLevel": 2
}